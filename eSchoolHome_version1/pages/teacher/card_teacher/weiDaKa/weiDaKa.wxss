.remind{
  position:absolute;
  left:0;
  right:0;
  margin: 50% auto;
  text-align: center;
  font-size: 30px;
  color: rgb(206, 12, 12);
  display: none;  /* block   none*/
}
.clock{
  position:absolute;
  /* margin-left: 292px; */
  /* float: right; */
