<view class="head">
  <view class="head_item {{selected?'head_itemActive':''}}" bindtap="selected">新请假</view>
  <view class="ring"></view>
  <view class="head_item {{selected1?'head_itemActive':''}}" bindtap='selected1'>审批结果</view>
</view>
<view class="main {{selected?'show':'hidden'}}">
  <form bindsubmit="formSubmit">
    <view class='bg'>
      <view class='item'>
        学生姓名：aa
      </view>
      <view class='item'>
        学生年级：三年级
      </view>
      <view class='item'>
        学生班级：一班
      </view>
      <view class='item'>
        开始时间：
          <picker mode="date" value="{{date}}" bindchange="changeDate" name="startTime" bindchange="changeDate">
            {{date}}
          </picker>
      </view>
      <view class='item'>
        结束时间：
          <picker mode="date" value="{{date1}}" bindchange="changeDate1" name="endTime" start="{{date}}">
            {{date1}}
          </picker>
      </view>
      <view class='item'>
        请假类型：1
      </view>
      <view class='item'>
        请假理由：事假
      </view>
      <view class='item'>
        审批意见：
        <view class='bk'>
          <input name="leaveReason" placeholder="请输入审批意见" maxlength='500' auto-height/>
        </view>
      </view>
      <button class='btn' bindtap="yes" style="width:30vw">通过</button>
      <button class='btn' bindtap="no" style="width:30vw">拒绝</button>
    </view>
  </form>
</view>

