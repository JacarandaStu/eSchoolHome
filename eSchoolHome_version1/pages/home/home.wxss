page{
  margin:0 auto;
  width:95%;
}
.choose {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 25rpx;
}

.icon_css {
  margin:0 auto;
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
  margin-top: 25px;
}

.icon_img {
  width: 80rpx;
  height: 80rpx;
}

.icon_text {
  justify-content:center;
  font-size:13px;
}
.icon_text1 {
  justify-content:center;
  font-size:18px;
  margin-top: 20px;
  color: rgba(17, 16, 16, 0.808);
}
.hot{
  margin-top: 0px;
  display: flex;
  flex-direction: row;
  font-size: 18px;
  margin-top: 80px;
}

.footswiper{
  width:95%;
  height:150px;
  margin:0 auto;
  margin-top:10px;
}
.hotimage{
  width:400rpx;
  height:135px;
}

.hotbox{
  width:100%;
  margin:0 auto;
  display: flex;
  flex-direction: row;
}
.textbox{
  margin-left: 30rpx;
  display: table;
  height:135px;
}
.hottext{
  display:table-cell;
  vertical-align: middle;
}
.swiper_container{
  position: fixed;
  top: 45%;
  height: 100%;
  width: 100%;
  margin-right: 5px;
}
.swiper{
  position: absolute;
  height: 50%;
  width: 100%;
}
.container{
  width: 100%;
  height: 100%;
  margin-top: 10px;
  top: 20px;
}